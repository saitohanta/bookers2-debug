
<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <h2>Users search for"test"</h2>
        <tr>
          <td></td>
          <td>Name</td>
          <td>Introduction</td>
        </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <h2>Books search for"test"</h2>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Opinion</td>
        </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
          <td>
            <%= link_to book.title, books_path %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>